{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "browser": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-underscore-dangle":"off",
        "spaced-comment":"off",
        "no-restricted-globals":"off",
        "class-methods-use-this":"off",
        "no-param-reassign":"off"
    },
    "overrides": [
        {
            "files": ["specs/**/*Spec.js"]
        }
    ]
}
